<%= form_for Product.new do |f| %>
  <div class="form-group row">
    <%= f.label :name, class:"col-xs-2 col-form-label" %>
    <div class="col-xs-8">
      <%= f.text_field :name, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :item_price, class:"col-xs-2 col-form-label" %>
    <div class="col-xs-8">
      <%= f.text_field :item_price, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :sell_price, class:"col-xs-2 col-form-label" %>
    <div class="col-xs-8">
      <%= f.text_field :sell_price, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :quantity, class:"col-xs-2 col-form-label" %>
    <div class="col-xs-8 pull-right">
      <%= f.number_field :quantity, in: 1..1000, step:1, class:"form-control" %>
    </div>
  </div>
  <%= f.submit "Add Product", class:"btn btn-primary" %>
<% end %>
